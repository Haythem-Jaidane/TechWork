{% block portfolioView %}

    <section id="portfolio" class="portfolio sections-bg">
      <div class="container" data-aos="fade-up">

        <div class="section-header">
          <h2>Liste des Projets </h2>
        </div>

        <div class="portfolio-isotope" data-portfolio-filter="*" data-portfolio-layout="masonry" data-portfolio-sort="original-order" data-aos="fade-up" data-aos-delay="100">

    

    <table class="table">
        <thead>
            <tr>
                
                <th>Nom Projet</th>
                <th>Description</th>
                <th>Domaine</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for projet in projets %}
            <tr>
               
                <td>{{ projet.nom }}</td>
                <td>{{ projet.description }}</td>
                <td>{{ projet.domaine }}</td>
                <td>
                    <a href="{{ path('app_projet_show', {'id': projet.id}) }}">Afficher les detailes</a><br>
                    <a href="{{ path('app_projet_edit', {'id': projet.id}) }}">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">Aucun enregistrement</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_projet_new') }}"><strong>Creer un nouveau Projet </strong></a>
<div class="d-flex justify-content-between">
<a href="{{ path( 'app_fichmedia_index') }}"class="btn btn-primary float-right ">Consulter les fichiers media</a>
<a href="{{ path( 'app_typeprojet_index') }}"class="btn btn-primary float-right ">Consulter les types projets </a><br>

</div>
    </section>
     
     </div>
{% endblock %}